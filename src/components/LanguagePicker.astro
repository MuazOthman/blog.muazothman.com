---
import {
  getLocaleInfo,
  stripBaseAndLocale,
  getRelativeLocalePath,
} from "@/i18n/utils";

const otherLocale = Astro.currentLocale === "en" ? "ar" : "en";

const unLocalizedPathname = stripBaseAndLocale(
  Astro.currentLocale,
  Astro.url.pathname
);
---

<a
  href={getRelativeLocalePath(otherLocale, unLocalizedPathname)}
  class="block px-4 py-2 text-sm text-foreground transition-colors hover:bg-muted hover:text-accent"
  role="menuitem"
>
  {getLocaleInfo(otherLocale).displayName}
</a>
